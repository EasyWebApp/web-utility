{
    "name": "web-utility",
    "version": "0.12.0",
    "license": "LGPL-3.0",
    "author": "shiy2008@gmail.com",
    "description": "Web front-end toolkit based on TypeScript",
    "keywords": [
        "web",
        "front-end",
        "utility",
        "toolkit",
        "typescript"
    ],
    "homepage": "https://web-cell.dev/web-utility/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/web-utility.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/web-utility/issues"
    },
    "main": "dist/index.js",
    "source": "source/index.ts",
    "types": "dist/index.d.ts",
    "devDependencies": {
        "@types/jest": "^25.1.4",
        "@types/node": "^13.9.3",
        "husky": "^4.2.3",
        "jest": "^25.1.0",
        "lint-staged": "^10.0.9",
        "open-cli": "^6.0.0",
        "parcel-bundler": "^1.12.4",
        "prettier": "^2.0.2",
        "ts-jest": "^25.2.1",
        "typedoc": "^0.17.3",
        "typescript": "^3.8.3"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{md,json,yml,ts}": [
            "prettier --write"
        ]
    },
    "jest": {
        "preset": "ts-jest"
    },
    "scripts": {
        "test": "lint-staged && jest",
        "pack-type": "tsc  &&  rm -f dist/*.{js,map}",
        "pack-code": "parcel build source/index.ts --global WebUtility",
        "build": "rm -rf dist/ docs/  &&  typedoc  &&  npm run pack-type  &&  npm run pack-code",
        "help": "typedoc  &&  open-cli docs/index.html",
        "prepublishOnly": "npm test  &&  npm run build"
    },
    "husky": {
        "pre-commit": "npm test",
        "pre-push": "npm run build"
    }
}
