{
    "compilerOptions": {
        "target": "ES5",
        "module": "ES6",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "declaration": true,
        "lib": ["ES2019", "DOM", "DOM.Iterable"],
        "types": ["node", "jest"],
        "outDir": "dist/"
    },
    "include": ["source/*.ts"],
    "typedocOptions": {
        "name": "Web utility",
        "excludeExternals": true,
        "excludePrivate": true,
        "readme": "./ReadMe.md",
        "out": "docs/"
    }
}
